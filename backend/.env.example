# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/llmguard

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-in-production
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Datadog
DATADOG_WEBHOOK_SECRET=your-datadog-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=http://localhost:5173

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:3000

# Incident Detection
LATENCY_THRESHOLD_MS=5000
ERROR_RATE_THRESHOLD=0.1
RISK_SCORE_THRESHOLD=80
COST_SPIKE_THRESHOLD=1.5

# Model Pricing (per 1K tokens)
GPT4_PRICE=0.03
O3_MINI_PRICE=0.001
