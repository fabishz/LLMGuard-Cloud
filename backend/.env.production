# Application
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@neon-db-host/llmguard_prod

# JWT
JWT_SECRET=prod_secret_key_minimum_32_characters_long_change_in_production
REFRESH_TOKEN_SECRET=prod_refresh_token_secret_minimum_32_characters_long_change_in_production
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# OpenAI
OPENAI_API_KEY=sk-prod-openai-api-key

# Stripe
STRIPE_SECRET_KEY=sk_live_prod_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_prod_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_prod_stripe_webhook_secret

# Datadog
DATADOG_WEBHOOK_SECRET=prod_datadog_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=https://app.llmguard.com

# API Configuration
API_VERSION=v1
API_BASE_URL=https://api.llmguard.com

# Incident Detection
LATENCY_THRESHOLD_MS=5000
ERROR_RATE_THRESHOLD=0.1
RISK_SCORE_THRESHOLD=80
COST_SPIKE_THRESHOLD=1.5

# Model Pricing (per 1K tokens)
GPT4_PRICE=0.03
O3_MINI_PRICE=0.001
